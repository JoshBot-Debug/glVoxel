{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "cmake -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },

    {
      "label": "valgrind",
      "type": "shell",
      "command": "valgrind",
      "args": [
        "--leak-check=full",
        "--track-origins=yes",
        "${workspaceFolder}/build/glPlay"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Build Debug"],
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "clear": true,
        "panel": "dedicated",
        "showReuseMessage": false
      }
    },

    {
      "label": "renderdoc",
      "type": "shell",
      "command": "renderdoccmd",
      "args": [
        "capture",
        "--working-dir",
        "${workspaceFolder}",
        "${workspaceFolder}/build/glPlay"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["Build Debug"],
      "presentation": {
        "reveal": "always",
        "clear": true,
        "panel": "dedicated",
        "showReuseMessage": false
      }
    }
  ]
}